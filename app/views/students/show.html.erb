<div class="row add_padding">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <i class="large material-icons circle">person_outline</i>
          <h3><strong>Name:</strong> <%= @student.name %></h3>
          <p>
          <strong>Email:</strong> <%= @student.email %></p>
          <p>Current Courses Enrolled In: 0</p>
        </div>
      </div>
      <% if current_user == @student %>
        <%= link_to ' <i class="material-icons left">edit</i> Edit Your Profile'.html_safe, edit_student_path(@student), class:"waves-effect waves-light btn"  %>
      <% end %>
    </div>
  </div>