<%= render 'shared/errors', obj: @student %>

<div class="row">
  <div class="col s12 center-align">
    <h3><%= @student.new_record? ? "Student Sign Up" : "Edit Profile" %></h3>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= form_for(@student, html: {class: "col s12"}) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <%= f.text_field :name, autofocus: true, placeholder: "Name"  %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <%= f.email_field :email, placeholder: "Email" %>
      </div>
    </div>
    <%= button_tag( class:"btn waves-effect waves-light right") do %>
    <%= @student.new_record? ? "Sign Up" : "Update" %><i class="material-icons right">send</i>
    <% end %>
    <% end %>
  </div>
</div>