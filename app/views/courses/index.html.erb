<div class="row">
  <div class="col s12 center-align">
    <h3>Course Listing</h3>
  </div>
</div>

<div class="row">
  <% @courses.each do |course| %>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Code: <%= course.short_name %></span>
        <ul>
          <li>Name: <%= course.name %></li>
          <li>Description: <em> <%= course.description %></em></li>
        </ul>
      </div>
      <div class="card-action">
        <a href="#">Enroll</a>
        <a href="#">Info</a>
      </div>
    </div>
  </div>
  <% end %>
</div>